@model WeddingForm.Models.form

@{
    ViewBag.Title = "C";
}

<h2>送重機 & 如花</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>電子喜帖</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.camp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span style="font-size:12pt">男方</span>
                @Html.RadioButtonFor(Model => Model.camp, "男", new { @checked = "checked" })&nbsp;&nbsp;&nbsp;
                <span style="font-size:12pt">女方</span>
                @Html.RadioButtonFor(Model => Model.camp, "女", new { @checked = "checked" })&nbsp;&nbsp;&nbsp;
                <span style="font-size:12pt">婚禮蟑螂</span>
                @Html.RadioButtonFor(Model => Model.camp, "來亂", new { @checked = "checked" })&nbsp;&nbsp;&nbsp;
                @Html.ValidationMessageFor(model => model.camp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.many, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.many, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.many, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.relation, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.relation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.relation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.wantsay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.wantsay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.wantsay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確認" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
